<%- include('includes/header') %>
<div class="text-center mt-8">
  <h2 class="text-2xl mb-5">Reset Your Password</h2>
  <div class="max-w-md mx-auto bg-white p-4 m-4 rounded">
    <form action="/reset-password" method="POST">
      <div>
        <label
          for="reset_password"
          class="block text-left uppercase font-bold tracking-wide"
          >Enter your email</label
        >
        <input
          name="reset_password"
          class="w-full rounded block py-3 px-4 leading-tight border border-gray-200 bg-gray-200 my-4 focus:outline-none appearance-none focus:bg-white text-gray-700"
          type="text"
        />
      </div>
      <button class="w-full bg-blue-600 text-white hover:bg-blue-700 rounded py-3">Reset Password</button>
    </form>
  </div>
</div>

<%- include('includes/footer') %>
