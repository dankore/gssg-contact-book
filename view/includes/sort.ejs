<div class=" pl-1 sm:pl-32 mt-4 sm:mt-0">
<section id="filter-section" class="mr-5">

  <div class="flex mr-5">
    <button class="flex items-center text-md px-2" id="filter-icon">
      <img src="../../static/filter.svg"/>
      <label class="ml-1 cursor-pointer">Filter</label>
    </button>
    <button id="arrow-down" class="flex px-2">
     <img src="../../static/bar-chart.svg"/>
      <label class="ml-1 cursor-pointer">View Stats</label>
    </button>
  </div>

  <div id="form-container" style="display: none;">
    <form action="/sort" method="POST" class="pt-1">
      <button value="-1" name="q" class="mr-2">
        <p class="px-2">Newer profiles first</p>
      </button>
      <button value="1" name="q">
        <p class="px-2">Older profiles first</p>
      </button>
    </form>
  </div>

  </section>
  <section id="chart-section">
  <!--CHART -->
    <div style="width: 35%; min-width: 300px; height: 25%" class="rounded-bl-lg rounded-br-lg w-1/2 shadow-lg">
      <canvas
        class="absolute bg-white z-10 border border-green-300"
        id="myChart"
        style="display: none;"
      >
      </canvas>
    </div>

<script>
  var ctx = document.getElementById("myChart").getContext("2d");
  var myChart = new Chart(ctx, {
    type: "bar",
    data: {
      labels: <%- JSON.stringify(statsByYear[0]) %>,
      datasets: [
        {
          data: <%- JSON.stringify(statsByYear[1]) %>,
          backgroundColor: [
            "rgba(255, 99, 132, 0.2)",
            "rgba(54, 162, 235, 0.2)",
            "rgba(255, 206, 86, 0.2)",
            "rgba(75, 192, 192, 0.2)",
            "rgba(153, 102, 255, 0.2)",
            "rgba(255, 159, 64, 0.2)",
            "rgba(255, 99, 132, 0.2)",
            "rgba(54, 162, 235, 0.2)",
            "rgba(255, 206, 86, 0.2)",
            "rgba(75, 192, 192, 0.2)",
            "rgba(153, 102, 255, 0.2)",
            "rgba(255, 159, 64, 0.2)"
          ],
          borderColor: [
            "rgba(255, 99, 132, 1)",
            "rgba(54, 162, 235, 1)",
            "rgba(255, 206, 86, 1)",
            "rgba(75, 192, 192, 1)",
            "rgba(153, 102, 255, 1)",
            "rgba(255, 159, 64, 1)",
            "rgba(255, 99, 132, 1)",
            "rgba(54, 162, 235, 1)",
            "rgba(255, 206, 86, 1)",
            "rgba(75, 192, 192, 1)",
            "rgba(153, 102, 255, 1)",
            "rgba(255, 159, 64, 1)"
          ],
          borderWidth: 1
        }
      ]
    },
  options: {
      legend: { display: false },
      title: {
        display: true,
        text: 'Number of profiles per graduation year for ' + <%= profiles.length %> + ' profile'
      },
          scales: {
            yAxes: [{
                ticks: {
                    beginAtZero: true
                }
            }]
        }
    }
  });
</script>


  <!--CHART ENDS-->
  </section.
</div>
