<!-- MODAL -->
<div id="profile-image-modal" class="relative z-10 hidden" aria-labelledby="modal-title" role="dialog" aria-modal="true">
  <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity"></div>

  <div class="fixed inset-0 z-10 overflow-y-auto">
    <button id="close-image" class="flex items-center mr-5 absolute right-4 top-4 px-4 py-2 bg-red-500 text-white rounded-md">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
      </svg>
      close
    </button>
    <div class="flex min-h-full items-end justify-center p-4 text-center sm:items-center sm:p-0">
      <div class="relative transform overflow-hidden rounded-lg bg-white px-4 pt-5 pb-4 text-left shadow-xl transition-all sm:my-8 sm:w-full sm:max-w-sm sm:p-6">
        <div class="space-y-4">
          <div class="aspect-w-3 aspect-h-2">
            <img class="rounded-lg object-cover shadow-lg" src="<%= profile.photo %>" alt="<%= profile.firstName %> <%= profile.lastName %>" />
          </div>

          <div class="space-y-2">
            <div class="space-y-1 text-lg font-medium leading-6">
              <h3><%= profile.firstName %> <%= profile.lastName %></h3>
              <p class="text-indigo-600"><%= profile.year %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- MODAL ENDS -->

<div class="mx-auto text-sm rounded overflow-hidden shadow-lg bg-white -z-50" style="height: 25rem; width: 18rem">
  <% if(profile.photo){ %>
  <img id="profile-image" class="cursor-pointer w-full h-48 object-cover" title="<%= profile.firstName %>" src="<%= profile.photo %>" alt="profile picture" importance="high" srcset="<%= profile.photo %>" />
  <% } else { %>
  <img class="w-full h-48 object-cover" title="<%= profile.firstName %> <%= profile.lastName %>" src="../../static/blank.png" alt="profile picture" />
  <%}%>
  <div class="text-sm px-3 relative">
    <% if(profile.class){ %>
    <span class="absolute text-sm ml-56 inline-block bg-gray-200 rounded-full p-1 -mt-1 font-semibold text-gray-700"> <%= profile.class %> </span>
    <% } else { %>
    <span class="absolute text-xs ml-56 inline-block bg-gray-200 rounded-full p-1 -mt-1 font-semibold text-gray-700"> Class? </span>
    <%}%>
    <div class="font-bold text-md p-px mb-1" style="overflow-wrap: break-word; min-width: 0px; width: 18rem"><%= profile.firstName %> <%= profile.lastName %></div>

    <p class="font-medium mb-1 font-mono text-center">👩🏽‍🎓 Class of <%= profile.year %></p>
    <p class="mb-1"><span class="text-gray-600">Nickname 👤:</span> <%= profile.nickname %></p>
    <p class="mb-1"><span class="text-gray-600">Lives in 🏡:</span> <%= profile.residence %></p>
    <p class="mb-1"><span class="text-gray-600">Occupation 👷‍♀:</span> <%= profile.occupation %></p>
    <p class="mb-1"><span class="text-gray-600">Birthday 📅:</span> <%= profile.month %> <%= profile.day %></p>
    <p class="mb-1"><span class="text-gray-600">Phone Number 📞:</span> <%= profile.phone %></p>
  </div>
</div>
