<!-- SHOW NUMBER OF COMMENTS AND LIKES -->
<section class="mx-auto p-2 border-t text-xs border-gray-200 -mt-1 rounded shadow-lg bg-white" style="width: 18rem">
  <div class="flex justify-between">
    <!-- LIKES -->
    <!-- SHOWING NAMES OF THOSE WHO LIKED THE CURRENT USER PROFILE -->
    <%if(!locals.namesOfLikesReceivedFrom){%> <% locals.namesOfLikesReceivedFrom = []; %> <% } %> <% let arrayOfNames = [] %> <%for(let i = 0; i < locals.namesOfLikesReceivedFrom.length; i++){ %> <% if( namesOfLikesReceivedFrom[i].color == "yes" ){ %> <% let fullName = locals.namesOfLikesReceivedFrom[i].visitorName; %> <% let firstName = fullName.split(" ")[0]; %> <% arrayOfNames.push(firstName) %> <% } %> <% } %> <% let namesOfThoseWhoLikedThisProfile = ""; %>
    <!-- CHECK FOR LENGTH -->
    <% if(arrayOfNames.length < 1){ %>
    <!-- DO NOTHING -->
    <% } else if(arrayOfNames.length == 1) { %> <% namesOfThoseWhoLikedThisProfile = `Liked by ${arrayOfNames[0]}` %> <% } else if(arrayOfNames.length == 2) { %> <%namesOfThoseWhoLikedThisProfile = `Liked by ${arrayOfNames.slice(0, 1)} & ${arrayOfNames.slice(1).length} other`%> <% } else { %> <% namesOfThoseWhoLikedThisProfile = `Liked by ${arrayOfNames.slice(0, 1)} & ${arrayOfNames.slice(1).length} others`%> <% } %>
    <!-- CHECK FOR LENGTH ENDS-->
    <!-- SHOWING NAMES OF THOSE WHO LIKED THE CURRENT USER PROFILE -->
    <% if(user) {%>
    <!-- GET CURRENT @COLOR VALUE FOR THIS PROFILE. 
        IF COLOR=BLUE, VISITOR ALREADY LIKED THIS PROFILE. -->
    <%let color = "";%> <%if(!profilesUserLiked){%> <%profilesUserLiked = [];%> <%}%> <%for(let i = 0; i < profilesUserLiked.length; i++){%> <% if( profilesUserLiked[i].profileEmail == profile.email){%> <% color = profilesUserLiked[i].color; %> <%}%> <%}%>
   
    <div id="like-button-svg-container" class="relative flex items-center ml-2">
      <svg id="like-button-svg" class="<%= color %>-fill mr-1" xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="white" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round" class="feather feather-thumbs-up"><path d="M14 9V5a3 3 0 0 0-3-3l-4 9v11h11.28a2 2 0 0 0 2-1.7l1.38-9a2 2 0 0 0-2-2.3zM7 22H4a2 2 0 0 1-2-2v-7a2 2 0 0 1 2-2h3"></path></svg>
      <p id="likes-container" class="cursor-pointer"><%= namesOfThoseWhoLikedThisProfile %></p>
    </div>

      <%- include('likes', {color}) %>
   
    <%} else {%>
    <div id="like-button-svg-container" class="relative flex items-center">
      <svg id="like-button-svg" xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="white" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round" class="feather feather-thumbs-up"><path d="M14 9V5a3 3 0 0 0-3-3l-4 9v11h11.28a2 2 0 0 0 2-1.7l1.38-9a2 2 0 0 0-2-2.3zM7 22H4a2 2 0 0 1-2-2v-7a2 2 0 0 1 2-2h3"></path></svg>
      <p id="likes-container" class="ml-1 cursor-pointer"><%= namesOfThoseWhoLikedThisProfile %></p>
    </div>
    <%}%>
  </div>
  <!-- TOGGLE: SHOW NAMES OF USERS WHO LIKED THIS PROFILE -->
  <ul id="names-container-ul" class="py-1 px-4 absolute rounded opacity-75 bg-black text-white shadow-lg" style="display: none"></ul>
  <!-- TOGGLE: SHOW NAMES OF USERS WHO LIKED THIS PROFILE END-->
</section>

<!-- SHOW NUMBER OF COMMENTS AND LIKES END -->
