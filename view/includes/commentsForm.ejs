<section class="mx-auto mt-6 rounded" style="width: 18rem;">
  <!-- COMMENTS FORM -->
  <% if(user){ %>
  <div class="bg-white">
    <form action="/profile" method="POST" class="p-2">
      <textarea
        name="comment"
        class="bg-gray-200 focus:bg-gray-100 w-full"
      ></textarea>
      <button class="rounded bg-blue-600 hover:bg-blue-800 text-white w-full">
        Submit
      </button>
    </form>
  </div>
  <% } %>
  <!-- COMMENTS FORM END -->
  <!-- COMMENTS DISPLAY -->
  <!-- 
    IF COMMENTS ARRAY EXISTS ON USER DOCUMENT, THEN CHECK IF COMMENTS ARRAY HAS ANY ELEMENT(COMMENTS).
    SHOW NO COMMENT FOUND FOR BOTH IF FALSE
   -->
  <ul class="mb-6 relative">
    <% if(profile.comments){ %> <% if(profile.comments.length){ %> <%
    profile.comments.reverse().forEach(comment => { %>
    <li class="my-2 bg-white p-2 rounded">
      <div class="flex justify-between">
        <div class="flex items-center">
          <a href="/profile/<%= comment.visitorEmail %>">
            <img
              src="../../static/blank.png"
              class="w-12 h-12 rounded-full mr-3"
            />
          </a>
          <div style="overflow-wrap: break-word; min-width: 0px; width: 13rem;">
            <p class="font-bold"><%= comment.visitorFirstName %></p>
            <p><%= comment.comment %></p>
          </div>
        </div>
      </div>
      <div class="flex justify-between items-center mt-2 text-xs">
        <p>
          <%= comment.commentDate %>
        </p>
        <div class="flex">
          <% if(user){ %> <% if(comment.visitorEmail == user.email){ %>
          <div class="flex items-center">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              width="15"
              height="15"
            >
              <path
                fill="green"
                class="heroicon-ui"
                d="M6.3 12.3l10-10a1 1 0 0 1 1.4 0l4 4a1 1 0 0 1 0 1.4l-10 10a1 1 0 0 1-.7.3H7a1 1 0 0 1-1-1v-4a1 1 0 0 1 .3-.7zM8 16h2.59l9-9L17 4.41l-9 9V16zm10-2a1 1 0 0 1 2 0v6a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V6c0-1.1.9-2 2-2h6a1 1 0 0 1 0 2H4v14h14v-6z"
              />
            </svg>
            <button id="edit-button"  value="<%= comment.comment %>">Edit</button>
          </div>
          <div class="flex items-center ml-2">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              width="15"
              height="15"
            >
              <path
                fill="red"
                class="heroicon-ui"
                d="M8 6V4c0-1.1.9-2 2-2h4a2 2 0 0 1 2 2v2h5a1 1 0 0 1 0 2h-1v12a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V8H3a1 1 0 1 1 0-2h5zM6 8v12h12V8H6zm8-2V4h-4v2h4zm-4 4a1 1 0 0 1 1 1v6a1 1 0 0 1-2 0v-6a1 1 0 0 1 1-1zm4 0a1 1 0 0 1 1 1v6a1 1 0 0 1-2 0v-6a1 1 0 0 1 1-1z"
              />
            </svg>
            <form action="/delete-comment" method="POST">
              <button name="commentId" value="<%- comment.commentId %>">
                Delete
              </button>
            </form>
          </div>
          <%}%> <%}%>
        </div>
      </div>
      <!-- EDIT COMMENT FORM -->
      <div id="comment-edit-container" class="absolute w-full -ml-2 -mt-12" style="display: none;">
        <form
          action="/edit-comment"
          method="POST"
          class="w-full  bg-red-500 p-2 "
        >
          <textarea
            name="edit_comment"
            value="<%= comment.comment %>"
            class="bg-gray-200 focus:bg-gray-100 w-full"
          >
<%= comment.comment %>
      </textarea
          >
        </form>
        <div class="flex justify-between">
          <button class="bg-green-600 text-white px-2 rounded">Cancel</button>
          <button class="bg-blue-600 text-white px-2 rounded">Update</button>
        </div>
      </div>
      <!-- EDIT COMMENT FORM ENDS -->
    </li>
    <% }) %> <% } else { %>
    <p>No comment found.</p>
    <%}%> <% } else { %>
    <p>No comment found!</p>
    <%}%>
  </ul>
</section>
