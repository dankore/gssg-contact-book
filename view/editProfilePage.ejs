<%- include('includes/header') %>

<div class="mt-6 text-center">
  <%- include('includes/goToProfile') %>
  <h2 class="text-2xl">Edit Your Profile</h2>
</div>
<div
  class="flex justify-center p-2 sm:p-4 sm:mx-auto relative m-4 max-w-2xl"
>
  <form
    action="/profile/<%= profile.email %>/edit"
    method="POST"
    class=""
    enctype="multipart/form-data"
  >
    <div class="max-w-lg mx-auto mt-4">
      <%- include('includes/flash') %>
      <!-- MANDATORY FIELDS -->
      <p class="mt-3 -mx-2">Required fields <span class="text-red-600">*</span></p>
      <div class="flex flex-wrap -mx-3 mt-1 mb-2 px-4 py-8 border rounded bg-white">
        <div class="w-full md:w-1/2 px-3 md:mb-0">
          <label
            class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-1"
            for="first-name"
          >
            First Name <span class="text-red-600">*</span>
          </label>
          <input
            name="firstName"
            value="<%= profile.firstName %>"
            class="appearance-none block w-full bg-gray-200 text-gray-700 border rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white"
            id="first-name"
            type="text"
          />
        </div>
        <div class="w-full md:w-1/2 mb-3 md:mb-0 px-3">
          <label
            class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-1"
            for="last-name"
          >
            Last Name <span class="text-red-600">*</span>
          </label>
          <input
            name="lastName"
            value="<%= profile.lastName %>"
            class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
            id="last-name"
            type="text"
          />
        </div>
        <div class="w-full px-3 mb-3">
          <label
            class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-1"
            for="email"
          >
            Email (this Cannot Be Changed) <span class="text-red-600">*</span>
          </label>
          <input
            value="<%= profile.email %>"
            name="email"
            class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
            id="email"
            type="text"
            readonly
          />
        </div>
        <div class="w-full px-3 mb-3">
          <label
            class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-1"
            for="year"
          >
            What year did you graduated OR will graduate GSS Gwarinpa?
            <span class="text-red-600">*</span>
          </label>
          <input
            name="year"
            value="<%= profile.year %>"
            class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
            id="year"
            type="text"
          />
        </div>
        
      </div>
      <button
          class="rounded w-full bg-blue-600 hover:bg-blue-800 text-white py-1"
        >
          Save Changes
        </button>
      <!-- OPTIONAL FIELDS -->
      <p class="mt-6 -mx-2">Optional fields</p>
      <div class="flex flex-wrap -mx-3 mt-1 mb-2 px-4 py-8 border rounded bg-white">
        <div class="w-full px-3 mb-3">
          <label
            class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-1"
            for="nickname"
          >
            What is/was your nickname in school?
          </label>
          <input
            name="nickname"
            value="<%= profile.nickname %>"
            class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
            id="nickname"
            type="text"
          />
        </div>
        <div class="w-full px-3 mb-3">
          <label
            class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-1"
            for="phone"
          >
            What is your phone number?
          </label>
          <input
            name="phone"
            value="<%= profile.phone %>"
            class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
            id="phone"
            type="text"
          />
        </div>
        <div class="w-full md:w-1/2 px-3 md:mb-0">
          <label
            class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-1"
            for="social_1"
          >
            Social media link #1
          </label>
          <input
            name="social_1"
            value="<%= profile.social_1 %>"
            class="appearance-none block w-full bg-gray-200 text-gray-700 border rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white"
            id="social_1"
            type="text"
          />
        </div>
        <div class="w-full md:w-1/2 mb-3 md:mb-0 px-3">
          <label
            class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-1"
            for="social_2"
          >
            Social media link #2
          </label>
          <input
            name="social_2"
            value="<%= profile.social_2 %>"
            class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
            id="social_2"
            type="text"
          />
        </div>
        <div class="w-full px-3 py-3">
          <label
            class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-1"
            for="nickname"
          >
            Upload your photo
          </label>
          <input
            name="photo"
            value=""
            class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
            id="photo"
            type="file"
            accept="image/*"
          />
        </div>
      </div>
        <button
          class="rounded w-full bg-blue-600 hover:bg-blue-800 text-white py-1"
        >
          Save Changes
        </button>
    </div>
  </form>
</div>
<%- include('includes/footer') %>
