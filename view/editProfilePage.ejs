<%- include('includes/header') %>

<div class="mt-6 text-center">
  <%- include('includes/goToProfile') %>
  <h2 class="text-2xl">Edit Your Profile</h2>
</div>
<div class="flex justify-center p-2 sm:p-4 sm:mx-auto relative mx-4 max-w-2xl">
  <form
    action="/profile/<%= profile.email %>/edit"
    method="POST"
    class=""
    enctype="multipart/form-data"
  >
    <div class="max-w-lg mx-auto mt-4">
      <%- include('includes/flash') %>
      <!-- MANDATORY FIELDS -->
      <p class="mt-3">Required fields <span class="text-red-600">*</span></p>
      <div class="flex flex-wrap mt-1 mb-2 py-3 border rounded bg-white">
        <div class="w-full md:w-1/2 px-3 md:mb-0">
          <label
            class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-1"
            for="first-name"
          >
            First Name <span class="text-red-600">*</span>
          </label>
          <input
            name="firstName"
            value="<%= profile.firstName %>"
            class="appearance-none block w-full bg-gray-200 text-gray-700 border rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white"
            id="first-name"
            type="text"
          />
        </div>
        <div class="w-full md:w-1/2 mb-3 md:mb-0 px-3">
          <label
            class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-1"
            for="last-name"
          >
            Last Name <span class="text-red-600">*</span>
          </label>
          <input
            name="lastName"
            value="<%= profile.lastName %>"
            class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
            id="last-name"
            type="text"
          />
        </div>
        <div class="w-full px-3 mb-3">
          <label
            class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-1"
            for="email"
          >
            Email (this Cannot Be Changed) <span class="text-red-600">*</span>
          </label>
          <input
            value="<%= profile.email %>"
            name="email"
            class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
            id="email"
            type="text"
            readonly
          />
        </div>
        <div class="w-full px-3 mb-3">
          <label
            class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-1"
            for="year"
          >
            What year did you graduated OR will graduate GSS Gwarinpa?
            <span class="text-red-600">*</span>
          </label>
          <input
            name="year"
            value="<%= profile.year %>"
            class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
            id="year"
            type="text"
          />
        </div>
      </div>
      <button
        class="rounded w-full bg-blue-600 hover:bg-blue-800 text-white py-1"
      >
        Save Changes
      </button>
      <!-- OPTIONAL FIELDS -->
      <div class="flex justify-between mt-6">
        <p>Optional fields</p>
        <div  id="btn-optional-fields">Hide &#8593</div>
      </div>
      <div style="display: block;" id="optional-fields">
        <div class="flex flex-wrap mt-1 mb-2 py-3 border rounded bg-white">
          <div class="w-full px-3 py-3">
            <label
              class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-1"
              for="nickname"
            >
              Upload your photo
            </label>
            <input
              name="photo"
              value=""
              class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
              id="photo"
              type="file"
              accept="image/*"
            />
          </div>
          <div class="w-full px-3 mb-3">
            <label
              class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-1"
              for="nickname"
            >
              What is/was your nickname in school?
            </label>
            <input
              name="nickname"
              value="<%= profile.nickname %>"
              class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
              id="nickname"
              type="text"
            />
          </div>
          <div class="w-full md:w-1/2 px-3 md:mb-0">
            <label
              class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-1"
              for="phone"
            >
              What is your phone number?
            </label>
            <input
              name="phone"
              value="<%= profile.phone %>"
              class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
              id="phone"
              type="text"
            />
          </div>
          <div class="w-full md:w-1/2 px-3 md:mb-0">
            <label
              class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-1"
              for="residence"
            >
              Where do you currently live?
            </label>
            <input
              name="residence"
              value="<%= profile.residence %>"
              class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
              id="residence"
              type="text"
            />
          </div>
          <div class="w-full px-3 my-3">
            <label
              class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-1"
              for="class"
            >
              What is your last class or current class in GSS Gwarinpa?
            </label>
            <input
              name="class"
              value="<%= profile.class %>"
              class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
              id="class"
              type="text"
            />
          </div>
        </div>
        <button
          class="rounded w-full bg-blue-600 hover:bg-blue-800 text-white py-1"
        >
          Save Changes
        </button>
      </div>

      <!-- MORE OPTIONAL FIELDS -->
      <div class="flex justify-between mt-6">
        <p>More optional fields</p>
        <div id="btn-more-optional-fields">Hide &#8593</div>
      </div>
      <div id="more-optional-fields">
      <div class="flex flex-wrap mt-1 mb-2 py-3 border rounded bg-white">
        <div class="w-full md:w-1/2 px-3 md:mb-0">
          <label
            class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-1"
            for="occupation"
          >
            What is your occupation?
          </label>
          <input
            name="occupation"
            value="<%= profile.occupation %>"
            class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
            id="occupation"
            type="text"
          />
        </div>
        <div class="w-full md:w-1/2 px-3 md:mb-0">
          <label
            class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-1"
            for="teacher"
          >
            Your favorite teacher is/was?
          </label>
          <input
            name="teacher"
            value="<%= profile.teacher %>"
            class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
            id="teacher"
            type="text"
          />
        </div>
        <div class="w-full md:w-1/2 px-3 md:mb-0">
          <label
            class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-1 mt-2"
            for="month"
          >
            Month of Birth
          </label>
          <div class="relative">
            <select
              name="month"
              class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
              id="month"
            >
              <option><%= profile.month %></option>
              <option>January</option>
              <option>February</option>
              <option>March</option>
              <option>April</option>
              <option>May</option>
              <option>June</option>
              <option>July</option>
              <option>August</option>
              <option>September</option>
              <option>October</option>
              <option>November</option>
              <option>December</option>
              <option></option>
            </select>
            <div
              class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700"
            >
              <svg
                class="fill-current h-4 w-4"
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 20 20"
              >
                <path
                  d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"
                />
              </svg>
            </div>
          </div>
        </div>
        <div class="w-full md:w-1/2 mb-3 md:mb-0 px-3">
          <label
            class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-1 mt-2"
            for="day"
          >
            Day of Birth
          </label>
          <input
            name="day"
            value="<%= profile.day %>"
            class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
            id="day"
            type="text"
          />
        </div>
        <div class="w-full md:w-1/2 px-3 md:mb-0">
          <label
            class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-1 mt-2"
            for="social_type_1"
          >
            Select Social media type #1
          </label>
          <div class="relative">
            <select
              name="social_type_1"
              class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
              id="social_type_1"
            >
              <option><%= profile.social_type_1 %></option>
              <option>Facebook</option>
              <option>Twitter</option>
              <option>Instagram</option>
              <option>WhatsApp</option>
              <option></option>
            </select>
            <div
              class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700"
            >
              <svg
                class="fill-current h-4 w-4"
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 20 20"
              >
                <path
                  d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"
                />
              </svg>
            </div>
          </div>
        </div>
        <div class="w-full md:w-1/2 mb-3 md:mb-0 px-3">
          <label
            class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-1 mt-2"
            for="link_social_type_1"
          >
            Link to social media #1
          </label>
          <input
            name="link_social_type_1"
            value="<%= profile.link_social_type_1 %>"
            class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
            id="link_social_type_1"
            type="url"
          />
        </div>
        <div class="w-full md:w-1/2 px-3 md:mb-0">
          <label
            class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-1 mt-2"
            for="social_type_2"
          >
            Select Social media type #2
          </label>
          <div class="relative">
            <select
              name="social_type_2"
              class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
              id="social_type_2"
            >
              <option><%= profile.social_type_2 %></option>
              <option>Facebook</option>
              <option>Twitter</option>
              <option>Instagram</option>
              <option>WhatsApp</option>
              <option></option>
            </select>
            <div
              class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700"
            >
              <svg
                class="fill-current h-4 w-4"
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 20 20"
              >
                <path
                  d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"
                />
              </svg>
            </div>
          </div>
        </div>
        <div class="w-full md:w-1/2 mb-3 md:mb-0 px-3">
          <label
            class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-1 mt-2"
            for="link_social_type_2"
          >
            Link to social media #2
          </label>
          <input
            name="link_social_type_2"
            value="<%= profile.link_social_type_2 %>"
            class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
            id="link_social_type_2"
            type="url"
          />
        </div>
      </div>
      <button
        class="rounded w-full bg-blue-600 hover:bg-blue-800 text-white py-1"
      >
        Save Changes
      </button>
      </div>
    </div>
  </form>
</div>
<%- include('includes/footer') %>
